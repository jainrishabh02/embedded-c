def combination_sum(candidates, target):
    result = []
    candidates.sort()

    def backtrack(start, path, total):
        if total == target:
            result.append(path[:])
            return
        if total > target:
            return

        for i in range(start, len(candidates)):
            path.append(candidates[i])
            backtrack(i, path, total + candidates[i])  # not i + 1 because we can reuse same number
            path.pop()

    backtrack(0, [], 0)
    return result
